<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.sc.lydianlion.MainActivity">

    <TextView
            android:id="@+id/euroTo"
            style="?android:attr/spinnerStyle"
            android:layout_width="fill_parent"
            android:textSize="@dimen/all_dimen_18_sp"
            android:paddingLeft="@dimen/all_dimen_20"
            android:clickable="true"
            android:text="@string/euro_dollar"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="16dp" android:layout_marginEnd="8dp"/>

    <lecho.lib.hellocharts.view.LineChartView
            android:id="@+id/lineChart"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="@dimen/all_dimen_20"
            android:layout_marginLeft="@dimen/all_dimen_20"
            android:layout_width="match_parent"
            android:layout_height="450dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/euroTo"/>

    <Button android:textColor="@color/colorPrimary"
            android:background="@drawable/transparent_bg_bordered_button"
            android:layout_gravity="right"
            android:text="StartDate"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:id="@+id/startDate"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/lineChart"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="62dp"
            app:layout_constraintEnd_toStartOf="@+id/textView" android:layout_marginEnd="5dp"/>

    <Button android:textColor="@color/colorPrimary"
            android:layout_gravity="right"
            android:text="EndDate"
            android:background="@drawable/transparent_bg_bordered_button"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:id="@+id/endDate"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/lineChart"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="62dp"
            app:layout_constraintStart_toEndOf="@+id/textView"/>

    <TextView
            android:text="@string/to"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintEnd_toStartOf="@+id/endDate"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toEndOf="@+id/startDate"
            android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/lineChart"
            android:layout_marginTop="28dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>